#Ansible build
ansible-playbook infrastructure.yml

#Storm
##nimbus
docker run -p 6627:6627 --hostname hostname -d --restart always --name nimbus storm storm nimbus -c storm.zookeeper.servers='[zk_list]'
##supervisor
docker run -p --hostname nimbus_host 6700:6700 -d --restart always --name supervisor storm storm supervisor -c storm.zookeeper.servers='[zk_list]' -c nimbus.seeds='[nimbus_hosts]'
##deploy topology
storm jar target/ObfuscatorTopology.jar ObfuscatorTopology topol